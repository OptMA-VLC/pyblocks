{
  "blocks": [
    {
      "instance_of": "br.ufmg.optma.basic.signal_generator",
      "instance_id": "sig_gen_1",
      "name": "Signal Generator",
      "parameters": [
        {
          "param_id": "freq",
          "value": "100"
        }
      ]
    },
    {
      "instance_of": "br.ufmg.optma.integrations.ltspice",
      "instance_id": "ltspice_tx",
      "name": "LTSpice Integration",
      "parameters": [
        {
          "param_id": "config_path",
          "value": "./ltspice_tx_config.json"
        }
      ]
    },
    {
      "instance_of": "br.ufmg.optma.basic.gain",
      "instance_id": "gain",
      "name": "Gain",
      "parameters": [
        {
          "param_id": "gain_db",
          "value": -20.0
        }
      ]
    },
        {
      "instance_of": "br.ufmg.optma.integrations.ltspice",
      "instance_id": "ltspice_rx",
      "name": "LTSpice Integration",
      "parameters": [
        {
          "param_id": "config_path",
          "value": "./ltspice_rx_config.json"
        }
      ]
    }
  ],
  "connections": [
    {
      "from": "sig_gen_1::signal_out",
      "to": "ltspice_tx::signal_in"
    },
    {
      "from": "ltspice_tx::signal_out",
      "to": "gain::signal_in"
    },
    {
      "from": "gain::signal_out",
      "to": "ltspice_rx::signal_in"
    }
  ],
  "commands": [
    {
      "command": "plot",
      "args": {
        "signals": ["gain::signal_out", "ltspice_rx::signal_out"],
        "save_path": "./output_plot.png"
      }
    }
  ]
}